{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationStyle": "custom",
				"app-plus": {
					"scrollIndicator":"none"
				}
			}
		} ,{
            "path" : "pages/mine/mine",
            "style" : {
                "navigationBarTitleText": "我的",
                "enablePullDownRefresh": false
            }
        } ,{
            "path" : "pages/login/login",
            "style" : {
                "navigationBarTitleText": "登录",
                "enablePullDownRefresh": false
            }
            
        } ,{
            "path" : "pages/map/map",
            "style" : {
                "navigationBarTitleText": "地图",
                "enablePullDownRefresh": false
            }
        }
    ],
	"easycom": {
		"autoscan": true,
		"custom": {
			"ys-(.*)": "@/components/base/ys-$1.vue"// 匹配components目录内的vue文件
		}
	},
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#956FEC",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#aaa",
		"selectedColor": "#b92121",
		"borderStyle": "black",
		"backgroundColor": "#fff",
		"list": [{
				"pagePath": "pages/index/index",
				"iconPath": "/static/icon/home.png",
				"selectedIconPath": "/static/icon/home_on.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/map/map",
				"iconPath": "/static/icon/map.png",
				"selectedIconPath": "/static/icon/map_on.png",
