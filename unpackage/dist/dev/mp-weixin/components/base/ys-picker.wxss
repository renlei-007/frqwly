.ys-picker {
  position: fixed;
  z-index: 999;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
}
.ys-picker .ys-picker-mask {
  position: absolute;
  z-index: 90;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  opacity: 0;
  -webkit-transition: all 200ms linear;
  transition: all 200ms linear;
}
.ys-picker .mask_transition {
  opacity: 1;
}
.ys-picker .ys-picker-content {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  z-index: 999;
  -webkit-transition: all 200ms linear;
  transition: all 200ms linear;
  -webkit-transform: translateY(100%);
          transform: translateY(100%);
  background-color: #fff;
}
.ys-picker .content_transition {
  -webkit-transform: translate(0);
          transform: translate(0);
}
.ys-picker .ys-picker-title {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #333;
  text-align: center;
  border-bottom: 1px solid #e5e5e5;
  padding: 0 10rpx;
  background-color: #fff;
  position: relative;
  box-sizing: border-box;
}
.ys-picker .ys-picker-cancel,
.ys-picker .ys-picker-confirm {
  position: absolute;
  top: 0;
  width: 88rpx;
  height: 88rpx;
  padding: 30rpx;
  box-sizing: border-box;
}
.ys-picker .ys-picker-cancel {
  left: 10rpx;
}
.ys-picker .ys-picker-confirm {
  right: 10rpx;
}
.ys-picker .picker-view {
  height: 450rpx;
  background-color: #fff;
}
.ys-picker .item {
  line-height: 90rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

