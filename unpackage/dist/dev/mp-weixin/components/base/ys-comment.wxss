.ys-comment {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10000;
}
.ys-comment .comment_area {
  width: 100%;
  height: 800rpx;
  background-color: #FFFFFF;
  position: absolute;
  bottom: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.ys-comment .comment_area_drop {
  width: 100%;
  height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.ys-comment .comment_area_drop_icon {
  width: 48rpx;
  height: 48rpx;
}
.ys-comment .comment_area_send {
  width: 100%;
  height: 150rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  box-sizing: border-box;
  padding: 0 30rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  box-shadow: 0px 2px 4px #000;
}
.ys-comment .comment_area_send_input {
  width: 500rpx;
  height: 80rpx;
  border-bottom: 1px solid #ccc;
  font-size: 24rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  text-indent: 1rem;
  color: #43474E;
}
.ys-comment .comment_area_send_btn {
  font-size: 36rpx;
  line-height: 36rpx;
  color: #43474E;
  margin-right: 20rpx;
}
.ys-comment .comment_area .comment_part {
  width: 100%;
  height: calc(100% - 250rpx);
  box-sizing: border-box;
  padding: 0 60rpx;
}
.ys-comment .comment_area .comment_part_name {
  font-size: 40rpx;
  line-height: 40rpx;
  color: #1B1C1E;
  box-sizing: border-box;
  padding-bottom: 20rpx;
}
.ys-comment .comment_area .comment_part .comment_box {
  width: 100%;
  height: calc(100% - 60rpx);
}
.ys-comment .comment_area .comment_part .comment_box .comment_list {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  padding: 30rpx 0;
  border-bottom: 1px dashed #ccc;
}
.ys-comment .comment_area .comment_part .comment_box .comment_list_left_avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}
.ys-comment .comment_area .comment_part .comment_box .comment_list_right {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  text-align: center;
  width: 60rpx;
}
.ys-comment .comment_area .comment_part .comment_box .comment_list_right image {
  width: 30rpx;
  height: 28rpx;
}
.ys-comment .comment_area .comment_part .comment_box .comment_list_right text {
  font-size: 22rpx;
  line-height: 22rpx;
  margin-top: 16rpx;
  color: #ccc;
}
.ys-comment .comment_area .comment_part .comment_box .comment_list_center {
  width: calc(100% - 160rpx);
  margin-right: 20rpx;
}
.ys-comment .comment_area .comment_part .comment_box .comment_list_center_name {
  font-size: 28rpx;
  font-weight: 500;
  line-height: 40rpx;
  color: #1B1C1E;
}
.ys-comment .comment_area .comment_part .comment_box .comment_list_center_detail {
  font-size: 24rpx;
  line-height: 36rpx;
  color: #1B1C1E;
  display: block;
  word-wrap: break-word;
}

