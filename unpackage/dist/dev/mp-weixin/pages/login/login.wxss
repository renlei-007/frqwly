.login {
  width: 100%;
  height: 100%;
  background-color: #FFFFFF;
}
.login_box {
  width: 690rpx;
  margin: 0 auto;
  box-sizing: border-box;
  padding-top: 150rpx;
}
.login_box .log_int {
  width: 100%;
  height: 108rpx;
  background: #F2F5FA;
  border-radius: 16rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
}
.login_box .log_int input {
  width: 100%;
  height: 100%;
  line-height: 108rpx;
  color: #000;
  font-size: 34rpx;
}
.login_box .pass_int {
  margin-top: 30rpx;
}
.login_box .log_btn {
  width: 690rpx;
  height: 90rpx;
  background: #FBA933;
  border-radius: 54rpx;
  text-align: center;
  line-height: 90rpx;
  margin-top: 64rpx;
  font-size: 34rpx;
  letter-spacing: 10rpx;
  color: #FFFFFF;
}
.login_box .wxphone_btn {
  margin-top: 30rpx;
}
.login .orthers {
  width: 100%;
  margin-top: 70rpx;
}
.login .orthers .wx_btn {
  width: 100%;
  font-size: 28rpx;
  color: #576B95;
  text-align: center;
}
.login .orthers .circle {
  width: 100rpx;
  height: 100rpx;
  border: 2rpx solid #707070;
  border-radius: 50%;
  margin: 20rpx auto 0;
}
.login .orthers .action {
  width: 100%;
  font-size: 28rpx;
  color: #576B95;
  text-align: center;
  margin-top: 48rpx;
}
.login .orthers .action .space {
  margin: 0 10rpx;
}

