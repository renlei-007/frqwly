page {
  width: 100%;
  height: 100%;
  background-color: #FFFFFF;
}
.content {
  width: 100%;
  box-sizing: border-box;
  padding-top: 30rpx;
}
.content .tit_box {
  width: 690rpx;
  box-sizing: border-box;
  padding: 30rpx;
  background-color: #F2F5FA;
  border-radius: 16rpx;
  margin: 0 auto;
  font-size: 28rpx;
}
.content .tit_box input {
  line-height: 28rpx;
}
.content .feedback_box {
  width: 690rpx;
  height: 285rpx;
  box-sizing: border-box;
  padding: 30rpx;
  background-color: #F2F5FA;
  border-radius: 16rpx;
  margin: 30rpx auto 0;
  font-size: 28rpx;
}
.content .feedback_box .area_font {
  width: 100%;
  height: 190rpx;
  text-indent: 1em;
}
.content .feedback_box .limit {
  width: 100%;
  font-size: 24rpx;
  color: #1B1C1E;
  text-align: right;
}
.content .add_box {
  width: 690rpx;
  box-sizing: border-box;
  padding: 0 30rpx 30rpx;
  background-color: #F2F5FA;
  border-radius: 16rpx;
  margin: 30rpx auto 0;
  font-size: 28rpx;
}
.content .add_box_tips {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #8B8B9C;
  opacity: 0.5;
  position: relative;
}
.content .add_box_tips::after {
  position: absolute;
  content: '';
  bottom: 0;
  left: 50%;
  width: 100%;
  height: 1px;
  background-color: #707070;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  opacity: 0.3;
}
.content .add_box .img_area {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  padding-top: 10rpx;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.content .add_box .img_area .feedback_img {
  width: 116rpx;
  height: 116rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
}
.content .add_box .img_area .img_hull {
  width: 116rpx;
  height: 116rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  background-color: #E5E9FC;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  margin-top: 20rpx;
  margin-right: 20rpx;
}
.content .add_box .img_area .img_hull .add_img {
  width: 56rpx;
  height: 48rpx;
}
.content .add_box .img_area .img_hull .add_text {
  font-size: 20rpx;
  color: #8B8B9C;
  margin-top: 8rpx;
}
.content .submit {
  width: 690rpx;
  height: 90rpx;
  background: #6446E1;
  border-radius: 54rpx;
  margin: 60rpx auto 0;
  font-size: 34rpx;
  line-height: 90rpx;
  text-align: center;
  color: #FFFFFF;
}

