.my-message {
  width: 100%;
  height: 100%;
}
.my-message .cate_area {
  width: 100%;
  height: 100rpx;
  background: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
}
.my-message .cate_area_list {
  font-size: 32rpx;
  line-height: 92rpx;
  color: #474757;
}
.my-message .cate_area .active {
  font-size: 40rpx;
  font-weight: 500;
  color: #6952E1;
  position: relative;
}
.my-message .cate_area .active::after {
  content: '';
  width: 62rpx;
  height: 8rpx;
  background: -webkit-linear-gradient(right, #C28FF5 0%, #7630DF 100%);
  background: linear-gradient(270deg, #C28FF5 0%, #7630DF 100%);
  position: absolute;
  bottom: -4rpx;
  left: 50%;
  border-radius: 4rpx;
  -webkit-transform: translateX(-31rpx);
          transform: translateX(-31rpx);
}
.my-message .mess_box {
  width: 100%;
  height: calc(100% - 100rpx);
  box-sizing: border-box;
  padding: 0 30rpx;
}
.my-message .mess_box .mess_li {
  width: 100%;
  background: #FFFFFF;
  border-radius: 8rpx;
  box-sizing: border-box;
  padding: 30rpx;
  margin-top: 30rpx;
}
.my-message .mess_box .mess_li_time {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #8B8B9C;
}
.my-message .mess_box .mess_li_title {
  font-size: 36rpx;
  line-height: 80rpx;
  color: #1B1C1E;
}
.my-message .mess_box .mess_li_detail {
  font-size: 24rpx;
  line-height: 36rpx;
  color: #8B8B9C;
}

