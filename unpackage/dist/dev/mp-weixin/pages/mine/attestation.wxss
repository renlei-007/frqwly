page {
  background-color: #FFFFFF;
}
.content {
  box-sizing: border-box;
  padding: 0 30rpx 50rpx;
}
.content .attestation_form {
  width: 100%;
  height: 112rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 32rpx;
  color: #000;
  position: relative;
}
.content .attestation_form .form_name {
  width: 180rpx;
}
.content .attestation_form .form_input {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.content .attestation_form::after {
  position: absolute;
  content: '';
  bottom: 0;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 100%;
  height: 1px;
  background-color: #eee;
}
.content .avatar_box {
  width: 100%;
}
.content .avatar_box .avatar_tips {
  font-size: 40rpx;
  line-height: 130rpx;
}
.content .avatar_box .avatar_item {
  width: 690rpx;
  height: 386rpx;
  background: #FFFFFF;
  border: 1rpx solid #eee;
  border-radius: 16rpx;
  box-sizing: border-box;
  padding: 48rpx 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.content .avatar_box .avatar_item .id_img {
  width: 100%;
  height: 100%;
}
.content .avatar_box .avatar_item_info_name {
  font-size: 40rpx;
  color: #1B1C1E;
}
.content .avatar_box .avatar_item_info_tips {
  margin-top: 30rpx;
  font-size: 24rpx;
  color: #8B8B9C;
  opacity: 0.4;
}
.content .avatar_box .avatar_item_img {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 328rpx;
  height: 100%;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.content .avatar_box .avatar_item_img .avatar {
  width: 328rpx;
  height: 214rpx;
}
.content .avatar_box .avatar_item:nth-last-child(1) {
  margin-top: 30rpx;
}
.content .submit {
  width: 100%;
  height: 90rpx;
  background: #6446E1;
  border-radius: 54rpx;
  text-align: center;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  margin-top: 60rpx;
}

