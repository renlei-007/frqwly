page {
  background-color: #FFFFFF;
}
.content {
  box-sizing: border-box;
  padding-top: 40rpx;
}
.content .inp_box {
  width: 690rpx;
  height: 106rpx;
  background-color: #f2f5fa;
  border-radius: 16rpx;
  box-sizing: border-box;
  padding: 0 32rpx;
  margin: 40rpx auto 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.content .inp_box input {
  width: 100%;
  height: 40rpx;
  font-size: 32rpx;
  color: #000;
}
.content .code {
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  margin-top: 60rpx;
}
.content .code .code_inp {
  width: 50%;
}
.content .code .tips {
  font-size: 32rpx;
  color: #6446E1;
}
.content .submit {
  width: 690rpx;
  height: 90rpx;
  background: #6446E1;
  border-radius: 54rpx;
  line-height: 90rpx;
  text-align: center;
  margin: 80rpx auto 0;
  font-size: 32rpx;
  color: #FFFFFF;
  opacity: 0.9;
}
.content .quick_submit {
  margin-top: 50rpx;
}

