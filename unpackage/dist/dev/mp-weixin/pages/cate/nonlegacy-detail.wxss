page {
  background-color: #FFFFFF;
}
.nonlegacy-detail {
  width: 100%;
  height: 100%;
  overflow: auto;
  box-sizing: border-box;
  padding-bottom: 150rpx;
}
.nonlegacy-detail .major {
  width: 100%;
}
.nonlegacy-detail .major_img {
  width: 690rpx;
  height: 414rpx;
  margin: 30rpx auto 0;
}
.nonlegacy-detail .major_img .major_imgs {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.nonlegacy-detail .major .spot_info_img {
  width: 690rpx;
  height: 414rpx;
  margin: 30rpx auto 0;
  background-color: #E5E5E5;
}
.nonlegacy-detail .major .spot_info_img video {
  width: 100%;
  height: 100%;
}
.nonlegacy-detail .major .spot_info_img .swiper_img {
  width: 100%;
  height: 100%;
}
.nonlegacy-detail .major_box {
  width: 690rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #1B1C1E;
  margin: 16rpx auto 0;
  box-sizing: border-box;
  padding-bottom: 15rpx;
}
.nonlegacy-detail .major_box_name {
  font-size: 36rpx;
  font-weight: 500;
  line-height: 68rpx;
  color: #1B1C1E;
}
.nonlegacy-detail .major_box_text {
  line-height: 64rpx;
}
.nonlegacy-detail .major_box_text text {
  color: #888;
}

