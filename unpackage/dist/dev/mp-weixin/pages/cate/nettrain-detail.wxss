page {
  background-color: #FFFFFF;
}
.nettrain-detail {
  width: 100%;
  height: 100%;
  overflow: auto;
  box-sizing: border-box;
  padding-bottom: 150rpx;
}
.nettrain-detail .major {
  width: 100%;
}
.nettrain-detail .major_img {
  width: 690rpx;
  height: 414rpx;
  margin: 30rpx auto 0;
}
.nettrain-detail .major_img .major_imgs {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.nettrain-detail .major_img .major_video {
  width: 100%;
  height: 100%;
}
.nettrain-detail .major_box {
  width: 690rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #1B1C1E;
  margin: 16rpx auto 0;
}
.nettrain-detail .major_box_name {
  font-size: 36rpx;
  font-weight: 500;
  line-height: 68rpx;
  color: #1B1C1E;
}
.nettrain-detail .major_box_text {
  height: 64rpx;
  line-height: 64rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 28rpx;
  color: #1B1C1E;
}
.nettrain-detail .major_box_text image {
  margin-right: 16rpx;
}
.nettrain-detail .major_box_text .address {
  max-width: calc(100% - 152rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.nettrain-detail .major_box_text .address_btn {
  width: 108rpx;
  height: 38rpx;
  margin-left: 10rpx;
  border: 2rpx solid #5D4ADE;
  border-radius: 8rpx;
  text-align: center;
  line-height: 38rpx;
  color: #614DDF;
  font-size: 22rpx;
}
.nettrain-detail .major .chapters {
  width: 654rpx;
  margin: 0 auto;
}
.nettrain-detail .major .chapters_tab {
  width: 100%;
  height: 98rpx;
  border-bottom: 2rpx solid #eee;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.nettrain-detail .major .chapters_tab_title {
  font-size: 40rpx;
  font-weight: 400;
  line-height: 90rpx;
  color: #8B8B9C;
  margin-right: 66rpx;
}
.nettrain-detail .major .chapters_tab .active {
  font-weight: 500;
  color: #7565E3;
  border-bottom: 8rpx solid #7565E3;
}
.nettrain-detail .major .chapters .introduce {
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 0;
}
.dz_red {
  color: #df1414;
}
video, live-player {
  width: 100%;
  height: 100%;
}
uni-video {
  height: 100%;
}

