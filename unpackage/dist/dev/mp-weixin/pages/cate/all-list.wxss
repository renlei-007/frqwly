.all-list {
  width: 100%;
  height: 100%;
}
.act_box {
  width: 100%;
}
.act_box .act_list {
  width: 690rpx;
  height: auto;
  background: #FFFFFF;
  border-radius: 8rpx;
  margin: 30rpx auto 0;
}
.act_box .act_list_img {
  width: 100%;
  height: 386rpx;
}
.act_box .act_list_content {
  height: auto;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
}
.act_box .act_list_content_title {
  font-size: 28rpx;
  line-height: 28rpx;
  color: #1B1C1E;
}
.act_box .act_list_content_info {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  margin-top: 20rpx;
}
.act_box .act_list_content_info_posi {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #8B8B9C;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.act_box .act_list_content_info_posi_icon {
  width: 20rpx;
  height: 24rpx;
  margin-right: 6rpx;
}
.act_box .act_list_content_info_status {
  width: 120rpx;
  height: 42rpx;
  background: #ff5252;
  border-radius: 10rpx;
  text-align: center;
  line-height: 42rpx;
  font-size: 22rpx;
  color: #FFFFFF;
}
.act_box .act_list_content_info .gray {
  background-color: #BFBFBF;
}

