.nettrain-list {
  width: 100%;
  height: 100%;
}
.nettrain-list .cultural_box {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.nettrain-list .cultural_box_point {
  width: 328rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  margin-top: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  position: relative;
}
.nettrain-list .cultural_box_point_img {
  width: 100%;
  height: 196rpx;
  background: #E5E5E5;
  border-radius: 8rpx 8rpx 0px 0px;
}
.nettrain-list .cultural_box_point_box {
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx 30rpx 20rpx 15rpx;
}
.nettrain-list .cultural_box_point_box_name {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #1B1C1E;
  width: 100%;
}
.nettrain-list .cultural_box_point_box_time {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 10rpx;
}
.nettrain-list .cultural_box_point_box_time .times {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}
.nettrain-list .cultural_box_point_box_time text {
  font-size: 24rpx;
  font-weight: 400;
  line-height: 24rpx;
  color: #8B8B9C;
}
.is_live {
  box-sizing: border-box;
  padding: 0 20rpx;
  height: 44rpx;
  font-size: 22rpx;
  line-height: 44rpx;
  color: #fff;
  background: #FF3616;
  border-radius: 24px 0px 0px 24px;
  position: absolute;
  top: 30rpx;
  right: 0;
}

