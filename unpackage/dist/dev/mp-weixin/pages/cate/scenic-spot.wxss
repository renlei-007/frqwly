page {
  background-color: #FFFFFF;
}
.scenic-spot {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding-bottom: 150rpx;
}
.scenic-spot .spot_info {
  width: 690rpx;
  box-sizing: border-box;
  padding: 30rpx 0;
  margin: 0 auto;
}
.scenic-spot .spot_info_img {
  width: 100%;
  height: 414rpx;
  background-color: #E5E5E5;
}
.scenic-spot .spot_info_img video {
  width: 100%;
  height: 100%;
}
.scenic-spot .spot_info_img .swiper-recommend {
  width: 100%;
  height: 100%;
  position: relative;
}
.scenic-spot .spot_info_img .swiper-recommend .swiper_img {
  width: 100%;
  height: 100%;
}
.scenic-spot .spot_info_img .swiper-recommend .screen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}
.scenic-spot .spot_info_title {
  font-size: 40rpx;
  font-weight: 500;
  line-height: 64rpx;
  color: #1B1C1E;
  margin: 20rpx 0;
}
.scenic-spot .spot_info_line {
  font-size: 32rpx;
  color: #1B1C1E;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 64rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.scenic-spot .spot_info_line image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 16rpx;
}
.scenic-spot .spot_info_line text {
  display: block;
  max-width: calc(100% - 160rpx);
  line-height: 64rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.scenic-spot .spot_info_line .openmap {
  width: 108rpx;
  height: 38rpx;
  border: 2rpx solid #5D4ADE;
  opacity: 1;
  border-radius: 8rpx;
  line-height: 38rpx;
  font-size: 22rpx;
  text-align: center;
  color: #614DDF;
  margin-left: 10rpx;
}
.scenic-spot .active_detail {
  width: 654rpx;
  margin: 0 auto;
}
.scenic-spot .active_detail_tab {
  width: 100%;
  height: 98rpx;
  border-bottom: 2rpx solid #ddd;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.scenic-spot .active_detail_tab_title {
  font-size: 40rpx;
  font-weight: 400;
  line-height: 90rpx;
  color: #7565E3;
  margin-right: 66rpx;
}
.scenic-spot .active_detail_tab .active {
  font-weight: 500;
  color: #1B1C1E;
  border-bottom: 8rpx solid #7565E3;
}
.scenic-spot .active_detail_content {
  width: 100%;
  min-height: 400rpx;
}
.scenic-spot .active_detail .spot_detail {
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 0;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
}
.video-box {
  width: 100%;
  height: 100%;
}

