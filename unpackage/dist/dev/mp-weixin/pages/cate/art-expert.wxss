page {
  background-color: #FFFFFF;
}
.art-expert {
  background-color: #FFFFFF;
  box-sizing: border-box;
  width: 100%;
  height: auto;
  padding-bottom: 150rpx;
}
.art-expert .arts {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 32rpx;
}
.art-expert .arts_title {
  font-size: 40rpx;
  font-weight: 500;
  line-height: 60rpx;
  color: #1B1C1E;
}
.art-expert .arts_detail {
  width: 100%;
  height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  font-size: 24rpx;
  color: #8B8B9C;
}
.art-expert .arts_txt {
  width: 100%;
  font-size: 28rpx;
  line-height: 48rpx;
  color: #8B8B9C;
}
.art-expert .active_detail {
  width: 654rpx;
  margin: 0 auto;
}
.art-expert .active_detail_tab {
  width: 100%;
  height: 98rpx;
  border-bottom: 2rpx solid #ddd;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.art-expert .active_detail_tab_title {
  font-size: 40rpx;
  font-weight: 400;
  line-height: 90rpx;
  color: #7565E3;
  margin-right: 66rpx;
}
.art-expert .active_detail_tab .active {
  font-weight: 500;
  color: #1B1C1E;
  border-bottom: 8rpx solid #7565E3;
}
.art-expert .active_detail_content {
  width: 100%;
  min-height: 400rpx;
}
.spot_info_img {
  width: 690rpx;
  height: 414rpx;
  margin: 30rpx auto 0;
  background-color: #E5E5E5;
}
.spot_info_img video {
  width: 100%;
  height: 100%;
}
.spot_info_img .swiper_img {
  width: 100%;
  height: 100%;
}

