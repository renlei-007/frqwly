.live-list {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.live {
  width: 690rpx;
  height: 100%;
  margin: 0 auto;
}
.live_list {
  margin: 30rpx auto 0;
  width: 100%;
  background-color: #FFFFFF;
}
.live_list_img {
  width: 100%;
  height: 386rpx;
}
.live_list_img_url {
  width: 100%;
  height: 100%;
}
.live_list_info {
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
}
.live_list_info_title {
  width: 100%;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 48rpx;
  color: #1B1C1E;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.live_list_info_detail {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 24rpx;
  color: #8B8B9C;
  margin-top: 20rpx;
}
.live_list_info_detail_left {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.live_list_info_detail_left .icon {
  width: 21rpx;
  height: 24rpx;
  margin-right: 16rpx;
}

